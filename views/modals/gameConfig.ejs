<div>

  <label for="listChars"> Select your char: </label><br>
  <select name="listChars" ng-model="selectedChar">
    <option ng-repeat="option in listChars track by $index" value="{{$index}}">{{option.name}}</option>
  </select>

  <label ng-if="gameGuid === undefined" for="maxPlayers">Max number of players: </label>
  <input min="1" max="10" ng-if="gameGuid === undefined" type="number" name="maxPlayers" ng-model="configGame.maxPlayers">

  <label ng-if="gameGuid === undefined" for="gameName"> Game name: </label>
  <input ng-if="gameGuid === undefined" type="text" name="gameName" ng-model="configGame.gameName">

  <label for="password"> Game password: </label>
  <input type="password" name="password" ng-model="configGame.password">

  <button ng-if="gameGuid !== undefined" ng-click="ok()">Join</button>
  <button ng-if="gameGuid === undefined" ng-click="ok()">Create</button>
</div>
